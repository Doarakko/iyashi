{
    "name": "iyashi",
    "description": "This is a slack bot that randomly returns the pictures of animals you posted. When you post a picture of an animal, it will be automatically classified and registered.",
    "repository": "https://github.com/Doarakko/iyashi",
    "keywords": [
        "iyashi",
        "slack bot",
        "machine learning",
        "image recognition",
        "pytorch",
        "slack api",
        "deep learning"
    ],
    "env": {
        "APP_BASE": {
            "description": "Do not change this value.",
            "value": "app"
        },
        "SLACK_APP_TOKEN": {
            "description": "Enter your slack app token.",
            "value": "xapp-xxxx"
        },
        "SLACK_BOT_TOKEN": {
            "description": "Enter your slack bot token.",
            "value": "xoxb-yyyy"
        },
        "IMAGE_UPLOADED_CHANNEL": {
            "description": "Please enter the channel id where photos would be posted.",
            "value": "C0XXXX"
        },
        "DATABASE_URL": {
            "description": "Only supports PostgreSQL",
            "value": "postgresql://root:root@postgresql:5432/postgres"
        },
        "ANIMAL_PREDICTION_API": {
            "description": "Enter the URL of the animal prediction API.",
            "value": "http://localhost:8000/predict"
        },
        "ANIMAL_PREDICTION_API_KEY": {
            "description": "Enter the key of the animal prediction API.",
            "value": "xxxx"
        }
    },
    "buildpacks": [
        {
            "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
        },
        {
            "url": "https://github.com/heroku/heroku-buildpack-python"
        }
    ],
    "addons": [
        "heroku-postgresql"
    ],
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "free"
        }
    }
}